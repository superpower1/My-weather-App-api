<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Api Practice</title>
  </head>
  <body>
    <div class="greeting">

    </div>
    <button type="button" class="fetch-btn">Greeting</button>
    <form class="custom-greeting" action="/greeting" method="post">
      <select class="" name="day">
        <option value="0">Sunday</option>
        <option value="1">Monday</option>
        <option value="2">Tuesday</option>
        <option value="3">Wednesday</option>
        <option value="4">Thursday</option>
        <option value="5">Friday</option>
        <option value="6">Saturday</option>
      </select>
      <input type="text" name="greeting" value="">
      <button type="submit" name="button" disabled="true">Change</button>
    </form>
    <script type="text/javascript">
      <%= checkUserInput %>
    </script>
    <script src="/js/main.js" charset="utf-8"></script>
  </body>
</html>
